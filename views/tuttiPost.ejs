<%function ellipsify (str) {
  if (str.length > 140) {
      return (str.substring(0, 138) + " ...");
  }
  else {
      return str;
  }
}%>

            
<% function tokenize (str) { 
  newStr = str.replace(/ /g, "§");
  return(newStr);
} %>


