    <form style="padding: 30px 30px 30px 30px;" method="POST" action="/admin/creaPost">
        <div class="form-group">
            <label for="exampleInputEmail1" style="font-family: 'Abril Fatface', cursive;">Titolo dell'Evento</label>
            <input type="text" class="form-control" name="Title" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Inserire titolo Evento" required>
        </div>
        <div class="md-form md-outline">
            <label for="default-picker" style="font-family: 'Abril Fatface', cursive;">Ora dell'Evento</label>
            <input type="time" id="default-picker" class="form-control" name="Hour" placeholder="Select time">
        </div>
        <div class="md-form md-outline input-with-post-icon datepicker">
            <label for="default-picker" style="font-family: 'Abril Fatface', cursive; padding-top: 15px;">Data
                dell'Evento</label>
            <input placeholder="Select date" type="date" id="example" class="form-control" name="Date">
        </div>
        <h1 style="padding-top: 10px; font-family: 'Abril Fatface', cursive; font-size: 105%;">Inserire l'immagine
            dell'Evento</h1>
        <div class="img-drop"><i data-toggle="tooltip" data-placement="top" title="Tooltip on top" id="img-plus"
                class="fas fa-plus" style="padding: 10px 10px 10px 10px;"></i></div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1"
                style="font-family: 'Abril Fatface', cursive; padding-top: 15px;">Informazioni sull'Evento</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Content" required></textarea>
        </div>
        <input style="color: blue;" class="btn btn-save" type="submit" href="#" role="button"></input>
    </form>



