<%function ellipsify (str) {
  if (str.length > 20 ) {
      return (str.substring(0, 20) + "...");
  }
  else {
      return str;
  }
}%>

<% function tokenize (str) {
  newStr = str.replace(/ /g, "§");
  return(newStr);
} %>


